<%- include('../includes/head.ejs') %>
        <link rel="stylesheet" href="/css.forms.css" />
		<link rel="stylesheet" href="/css/product.css" />
	</head>

	<body>
        <%- include('../includes/nav.ejs') %>

		<main>
			<div class="grid">
				<article class="card product-item">
					<header class="card__header">
						<h1 class="product__title"><%= prods.title %></h1>
					</header>
					<div class="card__image">
						<img
							src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png"
							alt="A Book" />
					</div>
					<div class="card__content">
						<h2 class="product__price">$<%= prods.price %></h2>
						<p class="product__description"><%= prods.description %></p>
					</div>
					<div class="card__actions">
						<a href="/product-details/<%= prods.id %>"><button class="btn">Details</button></a>
						<button class="btn">Add to Cart</button>
					</div>
				</article>
			
			</div>
            <%- include('../includes/end.ejs') %>
